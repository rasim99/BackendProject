
@{
    Layout = null;
}
@model NewsLetter
<section class="newsletter-area pt-100 pb-100 bg_cover" style="background-image: url(../images/@Model.ImageUrl)">
    <div class="container">
        <div class="row justify-content-end">
            <div class="col-lg-8">
                <div class="newsletter-content">
                    <h2 class="newsletter-title">@Model.Title</h2>
                    <p>@Model.Content</p>

                    <div class="newsletter-forn">
                        <form action="#">
                            <input type="text" placeholder="Your Email address">
                            <button class="main-btn">Subscribe</button>
                        </form>
                    </div>
                </div> <!-- newsletter content -->
            </div>
        </div> <!-- row -->
    </div> <!-- container -->
</section>

