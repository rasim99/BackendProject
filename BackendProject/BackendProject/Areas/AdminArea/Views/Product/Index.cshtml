@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-sm-12 col-xl-6">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Color Table</h6>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">Images</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Product Price</th>
                    <th scope="col">CName</th>
                    <th scope="col">Settings</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>  
                        <img src="~/images/product/@item.Images.FirstOrDefault(i=>i.Ismain).ImageUrl" style="width: 100px; height: 100px;">
                        </td>
                        <th scope="row">@item.Title</th>
                        <td>@item.Price</td>
                        <td>@item.ProductProductMenus.FirstOrDefault().ProductMenu.Title</td>
                        <td>
                            <a class="btn btn-outline-info" asp-area="AdminArea" asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                            <a class="btn btn-outline-success" asp-area="AdminArea" asp-controller="Product" asp-action="Update" asp-route-id="@item.Id">Update</a>
                            <a class="btn btn-outline-danger" asp-area="AdminArea" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                           
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

